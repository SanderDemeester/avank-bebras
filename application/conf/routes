# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /test				        controllers.Application.test(id: String)
GET		/login						controllers.UserController.login()
GET		/register					controllers.UserController.register()
GET		/logout						controllers.UserController.logout()

# Bootstrap resources
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/images/bootstrap/glyphicons-halflings-white.png")
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/images/bootstrap/glyphicons-halflings.png")
GET     /assets/stylesheets/bootstrap.min.css            controllers.Assets.at(path="/public", file="/stylesheets/bootstrap/bootstrap.min.css")
GET     /assets/stylesheets/bootstrap-responsive.min.css            controllers.Assets.at(path="/public", file="/stylesheets/bootstrap/bootstrap-responsive.min.css")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Question module
GET		/questioneditor				controllers.question.editor.QuestionEditorController.index()
GET		/questioneditor/create/:name		controllers.question.editor.QuestionEditorController.create(name)
POST    /questioneditor/create      controllers.question.editor.QuestionEditorController.save()
POST    /questioneditor/upload      controllers.question.editor.QuestionEditorController.upload()
GET    /questioneditor/delete      controllers.question.editor.QuestionEditorController.delete(name)
GET     /questioneditor/files.json      controllers.question.editor.QuestionEditorController.getFiles()
GET     /questioneditor/validate      controllers.question.editor.QuestionEditorController.validate(json)
GET     /servers                    controllers.question.ServerController.list(p:Int ?= 0, ps:Int ?=10, s ?= "name", o ?= "asc", f ?= "")

GET     /servers/new                controllers.question.ServerController.create()
POST    /servers/                   controllers.question.ServerController.save()

GET     /servers/:name              controllers.question.ServerController.edit(name)
POST    /servers/:name              controllers.question.ServerController.update(name)


GET    /servers/remove/:name       controllers.question.ServerController.remove(name)
